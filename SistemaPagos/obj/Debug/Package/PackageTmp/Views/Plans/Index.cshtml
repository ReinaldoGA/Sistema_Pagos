@model IEnumerable<FunerariaProyecto.Models.Plan>

@{
    ViewBag.Title = "Planes";
    ViewBag.Icon = "fa fa-users";
    ViewBag.Parent = "Index";
}

<div class=" panel panel-primary">
    <div class="panel-heading">Listado de Planes</div>
    <div class="panel-body">
        <div>
            <p>
                @Html.ActionLink("Nuevo Plan", "Create", null, new { @class = "btn btn-primary" })
            </p>
            <table class="table">
                <tr>
                    <th>
                      Plan
                    </th>
                    <th>
                        Precio
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.precio)
                        </td>
                        <td>
                            
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>